<%- include("./layouts/header") %>
<section class="grid content-center min-h-full mt-auto">
  <main class="max-w-screen-2xl w-11/12 xl:w-9/12 mx-auto">
    <h1 class="text-center my-6 teko text-4xl md:text-6xl font-bold underline">
      SIGN-UP
    </h1>
    <div
      class="md:bg-yellow-300 border-4 border-black rounded-xl shadow-2xl md:p-4 mb-14"
    >
      <form
        action=""
        class="fira-sans space-y-3 md:border-4 border-black rounded-lg bg-yellow-200 p-4"
      >
        <!-- username -->
        <div class="w-full max-w-4xl mx-auto">
          <label for="username" class="text-lg font-bold ml-2 inline-block">
            Username
          </label>
          <input
            type="text"
            name="username"
            id="username"
            class="border-2 md:border-4 border-black outline-none px-2 rounded-lg text-lg block w-full py-2 bg-slate-50"
            placeholder="Username"
          />
        </div>
        <!-- Email -->
        <div class="w-full max-w-4xl mx-auto">
          <label for="email" class="text-lg font-bold ml-2 inline-block">
            E-Mail
          </label>
          <input
            type="email"
            name="email"
            id="email"
            class="border-2 md:border-4 border-black outline-none px-2 rounded-lg text-lg block w-full py-2 bg-slate-50"
            placeholder="E-Mail"
          />
        </div>
        <!-- password -->
        <div class="w-full max-w-4xl mx-auto relative">
          <label for="password" class="text-lg font-bold ml-2 inline-block">
            Password
          </label>
          <div class="flex justify-between items-center">
            <input
              type="password"
              name="password"
              id="password"
              class="border-r-0 border-2 md:border-4 md:border-r-0 border-black outline-none px-2 rounded-l-lg block w-full py-2 bg-slate-50"
              value="password"
            />
            <i
              class="border-l-0 border-2 md:border-4 md:border-l-0 border-black rounded-r-lg show-pw fas fa-eye-slash text-base px-2 cursor-pointer duration-200 hover:text-orange-300 bg-slate-50 self-stretch pt-2"
            ></i>
          </div>
        </div>
        <!-- buttons -->
        <div
          class="text-black tracking-wide font-bold teko text-2xl md:text-3xl mx-auto grid grid-cols-1 md:grid-cols-2 justify-center gap-4 pt-10 w-full max-w-4xl"
        >
          <button
            type="submit"
            class="bg-orange-300 border-4 border-black px-5 uppercase w-full duration-300 hover:bg-green-400 hover:text-white rounded-lg"
          >
            Confirm
          </button>
          <button
            type="reset"
            class="bg-orange-300 border-4 border-black px-5 uppercase w-full duration-300 hover:bg-red-400 hover:text-white rounded-lg"
          >
            Reset
          </button>
          <button
            type="submit"
            class="bg-orange-300 border-4 border-black px-5 uppercase w-full duration-300 hover:bg-yellow-400 hover:text-white rounded-lg md:col-span-2 py-2 inline-block mt-2"
          >
            Play As Guest
          </button>
        </div>
      </form>
    </div>
  </main>
</section>

<script src="../misc_js/interaction.js"></script>
<script src="../misc_js/footer.js"></script>
<script src="../misc_js/show-pw.js"></script>

<%- include("./layouts/footer") %>
